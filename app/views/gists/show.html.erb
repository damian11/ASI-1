<%- model_class = Gist -%>
<div class="page-header">
  <h1>Podgląd sprzedaży</h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:imie) %></dt>
      <dd><pre class="prettyprint"><%= @gist.imie %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nazwisko) %></dt>
      <dd><pre class="prettyprint"><%= @gist.nazwisko %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:karnet) %></dt>
      <dd><pre class="prettyprint"><%= @gist.karnet %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.powrót")),
              gists_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edytuj")),
              edit_gist_path(@gist), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.usuń")),
              gist_path(@gist),
              method: 'delete',
data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'czy na pewno chcesz usunąć tą sprzedaż?')) },
              class: 'btn btn-danger' %>
</div>