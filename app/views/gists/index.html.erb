<%- model_class = Gist -%>
<div class="page-header">

    <h2>Sprzedaż karnetów</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
        <th><%= model_class.human_attribute_name("Id") %></th>
      <th><%= model_class.human_attribute_name(:imie) %></th>
      <th><%= model_class.human_attribute_name(:nazwisko) %></th>
      <th><%= model_class.human_attribute_name(:karnet) %></th>
        <th><%= model_class.human_attribute_name("data sprzedaży") %></th>
        <th><%=t '.actions', default: t("helpers.Opcje") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gists.each do |gist| %>
      <tr>
        <td><%= gist.id %></td>
          <td><%= gist.imie %></td>
          <td><%= gist.nazwisko %></td>
          <td><%= gist.karnet %></td>
        <td><%=l gist.created_at, format: :long %></td>
        <td>
          <%= link_to gist_path(gist), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_gist_path(gist), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to gist_path(gist), method: :delete, data: { confirm: t('.confirm', default: t("Potwierdź usuwanie", default: 'Potwierdź usuwanie')) }, class: 'btn btn-xs', title: "Usuń klienta" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.dodaj")),
            new_gist_path,
            class: 'btn btn-primary' %>
